generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}




// ENUMS

enum LeadStatus {
  NEW       
  PROPOSAL  
  WAITING  
  FOLLOW_UP 
  WON       
  LOST     
}


// MODELS


model User {
  id        String   @id @db.Uuid
  email     String   @unique
  createdAt DateTime @default(now())

  leads     Lead[]
  messages  Message[]

  @@map("users")
}

model Lead {
  id          String     @id @default(uuid())
  userId      String     @db.Uuid
  clientName  String     
  jobTitle    String     
  platform    String?   
  status      LeadStatus @default(NEW)
  lastContact DateTime?  
  description String?
  notes       String?    

  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  messages  Message[]
  reminders Reminder[]

  @@map("leads")
}

model Message {
  id        String   @id @default(uuid())
  leadId    String
  userId    String   @db.Uuid

  prompt    String   // what user asked AI
  response  String   // AI reply

  createdAt DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@map("messages")
}

model Reminder {
  id        String   @id @default(uuid())
  leadId    String
  date      DateTime
  done      Boolean  @default(false)

  lead Lead @relation(fields: [leadId], references: [id])

  @@map("reminders")
}
