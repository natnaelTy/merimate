generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}




// ENUMS

enum LeadStatus {
  NEW
  CONTACTED
  FOLLOW_UP
  CLOSED
  LOST
}


// MODELS


model User {
  id        String   @id @db.Uuid
  email     String   @unique
  createdAt DateTime @default(now())

  leads     Lead[]
  messages  Message[]
}

model Lead {
  id        String     @id @default(uuid())
  userId    String     @db.Uuid
  name      String
  platform  String?    // upwork, linkedin, email
  status    LeadStatus @default(NEW)
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  messages  Message[]
  reminders Reminder[]
}

model Message {
  id        String   @id @default(uuid())
  leadId    String
  userId    String   @db.Uuid

  prompt    String   // what user asked AI
  response  String   // AI reply

  createdAt DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Reminder {
  id        String   @id @default(uuid())
  leadId    String
  date      DateTime
  done      Boolean  @default(false)

  lead Lead @relation(fields: [leadId], references: [id])
}
